<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:background="@drawable/songlist_background"
    android:layout_marginTop="5dp"
    android:paddingTop="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imgSongs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/saxophone_svgrepo_com"
        />

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/imgSongs"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/nameSongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="SongName" />

        <TextView
            android:id="@+id/artistsSongs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#00215E"
            tools:text="Artist" />

    </LinearLayout>

    <ImageView
        android:id="@+id/moreBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_play_circle_24"
        android:layout_centerVertical="true"
        app:tint="#00215E"
        />


</RelativeLayout>